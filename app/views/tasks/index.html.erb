<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li style="list-style-type: none"><input type="checkbox" <%= "checked" if task.completed %>>
      <%= link_to task.title, task_path(task) %> <%= link_to '🗑️', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_task_path %>
